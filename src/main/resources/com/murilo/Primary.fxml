<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.PrimaryController"
            prefHeight="600" prefWidth="1200" >

        <MenuBar>
            <Menu text="Create">
                <MenuItem text="Author"/>
                <MenuItem text="Book"/>
                <MenuItem text="Publisher"/>
            </Menu>
        </MenuBar>


    <VBox spacing="10" alignment="CENTER">
                <Label text="Welcome to the Library System"/>
                <Button text="Go to Authors" onAction="#goToAuthors"/>
                <Button text="Go to Publishers" onAction="#goToPublishers"/>
                <Button text="Go to Books" onAction="#goToBooks"/>
                <Button text="Exit"/>
    </VBox>
</VBox>
