<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AuthorsController"
            styleClass="pane">

    <top>
            <ToolBar>
                <MenuBar>
                    <Menu text="Create">
                        <MenuItem text="Author"/>
                        <MenuItem text="Book"/>
                        <MenuItem text="Publisher"/>
                    </Menu>
                </MenuBar>
                <Button text="Authors"/>
                <Button text="Books"/>
                <Button text="Publishers"/>
            </ToolBar>
    </top>

    <center>
        <HBox alignment="CENTER">
            <TableView fx:id="AuthorsTableView">
                <columns>
                    <TableColumn fx:id="authorIdColumn" prefWidth="200" text="Author ID"/>
                    <TableColumn fx:id="authorNameColumn" prefWidth="200" text="Author Name"/>
                    <TableColumn fx:id="authorFnameColumn" prefWidth="200" text="Author Fname"/>
                </columns>
            </TableView>

        </HBox>
    </center>
</BorderPane>
